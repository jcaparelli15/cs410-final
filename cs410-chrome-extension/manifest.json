{
  "manifest_version": 3,
  "name": "PowerSearch",
  "version": "1.0",
  "description": "Add a chrome extension to do advanced search for wikipedia",
   "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
"action": {
    "default_popup": "popup.html"
  }
  ,
    "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "https://en.wikipedia.org/wiki/*"
        ]
    }
  ]
}
